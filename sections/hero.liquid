{{ 'section-hero.css' | asset_url | stylesheet_tag }}
<div class="header-container">
    <h1>
        <img src="{{ 'Zara-logo.svg' | asset_url }}" alt="he"/>
        <span>Tato</span>
    </h1>
</div>
<div class="hero-collections">
    
   
    
    <div class="hero-collections__card-ctn">
        {% for block in section.blocks %}
    <a class="hero-collections__card" href="{{ block.settings.collection.url}}">
        <div class="hero-collections__card--bg" style="background-image: url({{ block.settings.image_bg | img_url: 'Large' }})"></div>
        <h3 class=" left-arrow">{{ block.settings.collection.title | downcase}}</h3>
        <img class="right-arrow" style="transform: scaleX(-1);" src="{{ 'arrow.svg' | asset_url }}" alt="he"/>
        <img class="left-arrow" src="{{ 'arrow.svg' | asset_url }}" alt="he"/>
    </a>
    {% endfor %}
</div>
</div>




{% schema %}
{
    "name": "Hero",
    "blocks":[
    {
        "type":"collection",
        "limit": 3,
        "name": "Collection",
        "settings": [
            {
                "type": "collection",
                "id": "collection",
                "label": "Collection"
            },
            {
                "type": "image_picker",
                "id": "image_bg",
                "label": "Image background"
            },
            {
                "type": "image_picker",
                "id": "image_hover",
                "label": "Image Hover"
            }
        ]

    }
    ],
    "presets": [
    {
        "name": "Hero"
    }
    ]
}
{% endschema %}